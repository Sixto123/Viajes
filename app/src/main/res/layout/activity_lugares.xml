<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Encabezado -->
        <TextView
            android:id="@+id/encabezado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¿Que te gustaria buscar?"
            android:textSize="40sp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp" />

        <!-- Botones circulares con iconos -->
        <LinearLayout
            android:id="@+id/botones_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/encabezado"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="20dp">

            <!-- Botón Home -->
            <ImageButton
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:id="@+id/btnHome"
                android:background="@drawable/circle_button_background"
                android:src="@drawable/home"
                android:scaleType="fitXY"
                android:padding="16dp"
                android:layout_marginEnd="30dp"/>

            <!-- Botón Hoteles -->
            <ImageButton
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:id="@+id/btnHoteles"
                android:background="@drawable/circle_button_background"
                android:src="@drawable/hotel"
                android:scaleType="fitXY"
                android:padding="16dp"
                android:layout_marginEnd="30dp"/>

            <!-- Botón Lugares -->
            <ImageButton
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:id="@+id/btnLugares"
                android:background="@drawable/circle_button_background"
                android:src="@drawable/lugar"
                android:scaleType="fitXY"
                android:padding="16dp"
                android:layout_marginEnd="30dp"/>

            <!-- Botón Vuelos -->
            <ImageButton
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:id="@+id/btnVuelos"
                android:background="@drawable/circle_button_background"
                android:src="@drawable/vuelo"
                android:scaleType="fitXY"
                android:padding="16dp"
                android:layout_marginEnd="3dp"/>

        </LinearLayout>

        <ImageView
            android:id="@+id/lugar1"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/lugar1"
            android:layout_marginStart="20dp"
            android:layout_marginTop="250dp"
            android:scaleType="centerCrop"/>

        <TextView
            android:id="@+id/lugar1Info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lugar:Brasil\nActividad:Cristo Redentor.\nRestaurante:Toca Da Traira\nValoracion: ★★★★★"
            android:layout_toEndOf="@id/lugar1"
            android:layout_marginStart="30dp"
            android:layout_marginTop="250dp"/>

        <Button
            android:id="@+id/lugar1Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="60dp"
            android:layout_marginTop="330dp"
            android:layout_toEndOf="@id/lugar2"
            android:text="+informacion" />


        <ImageView
            android:id="@+id/lugar2"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="400dp"
            android:src="@drawable/lugar2"
            android:scaleType="centerCrop"/>

        <TextView
            android:id="@+id/lugar2Info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lugar:Corea del Norte\nActividad:Monte Paektu.\nRestaurante:Moran\nValoracion: ★★★★★"
            android:layout_toEndOf="@id/lugar1"
            android:layout_marginStart="30dp"
            android:layout_marginTop="400dp"/>

        <Button
            android:id="@+id/lugar2Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="60dp"
            android:layout_marginTop="480dp"
            android:layout_toEndOf="@id/lugar2"
            android:text="+informacion" />

        <ImageView
            android:id="@+id/lugar3"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="550dp"
            android:src="@drawable/lugar3"
            android:scaleType="centerCrop"/>

        <TextView
            android:id="@+id/lugar3Info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lugar:Suiza\nActividad:Castillo Chillon.\nRestaurante:Iberia Tapas\nValoracion: ★★★★★"
            android:layout_toEndOf="@id/lugar1"
            android:layout_marginStart="30dp"
            android:layout_marginTop="550dp"/>

        <Button
            android:id="@+id/lugar3Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="60dp"
            android:layout_marginTop="630dp"
            android:layout_toEndOf="@id/lugar3"
            android:text="+informacion" />

        <ImageView
            android:id="@+id/lugar4"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="700dp"
            android:src="@drawable/lugar4"
            android:scaleType="centerCrop"/>

        <TextView
            android:id="@+id/lugar4Info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lugar:Canada\nActividad:Parque Stanley.\nRestaurante:Nero Waffles\nValoracion: ★★★★★"
            android:layout_toEndOf="@id/lugar1"
            android:layout_marginStart="30dp"
            android:layout_marginTop="700dp"/>

        <Button
            android:id="@+id/lugar4Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="60dp"
            android:layout_marginTop="780dp"
            android:layout_toEndOf="@id/lugar4"
            android:text="+informacion" />

        <ImageView
            android:id="@+id/lugar5"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="850dp"
            android:src="@drawable/lugar5"
            android:scaleType="centerCrop"/>

        <TextView
            android:id="@+id/lugar5Info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lugar:Belgica\nActividad:Grand Place\nRestaurante:Guillaume\nValoracion: ★★★★★"
            android:layout_toEndOf="@id/lugar1"
            android:layout_marginStart="30dp"
            android:layout_marginTop="850dp"/>

        <Button
            android:id="@+id/lugar5Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="60dp"
            android:layout_marginTop="930dp"
            android:layout_toEndOf="@id/lugar5"
            android:text="+informacion" />

    </RelativeLayout>
</ScrollView>