<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Encabezado -->
        <TextView
            android:id="@+id/encabezado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¿Que te gustaria buscar?"
            android:textSize="40sp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp" />

        <!-- Botones circulares con iconos -->
        <LinearLayout
            android:id="@+id/botones_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/encabezado"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="20dp">

            <!-- Botón Home -->
            <ImageButton
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:id="@+id/btnHome"
                android:background="@drawable/circle_button_background"
                android:src="@drawable/home"
                android:scaleType="fitXY"
                android:padding="16dp"
                android:layout_marginEnd="30dp"/>

            <!-- Botón Hoteles -->
            <ImageButton
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:id="@+id/btnHoteles"
                android:background="@drawable/circle_button_background"
                android:src="@drawable/hotel"
                android:scaleType="fitXY"
                android:padding="16dp"
                android:layout_marginEnd="30dp"/>

            <!-- Botón Lugares -->
            <ImageButton
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:id="@+id/btnLugares"
                android:background="@drawable/circle_button_background"
                android:src="@drawable/lugar"
                android:scaleType="fitXY"
                android:padding="16dp"
                android:layout_marginEnd="30dp"/>

            <!-- Botón Vuelos -->
            <ImageButton
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:id="@+id/btnVuelos"
                android:background="@drawable/circle_button_background"
                android:src="@drawable/vuelo"
                android:scaleType="fitXY"
                android:padding="16dp"
                android:layout_marginEnd="3dp"/>

        </LinearLayout>

        <ImageView
            android:id="@+id/hotel1"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/hotel1"
            android:layout_marginStart="20dp"
            android:layout_marginTop="250dp"
            android:scaleType="centerCrop"/>

        <TextView
            android:id="@+id/hotel1Info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre:Shangri-La\nLugar:Reino Unido.\nValoración: ★★★★★\nPrecio: $15,000"
            android:layout_toEndOf="@id/hotel1"
            android:layout_marginStart="30dp"
            android:layout_marginTop="250dp"/>

        <Button
            android:id="@+id/hotel1Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="60dp"
            android:layout_marginTop="330dp"
            android:layout_toEndOf="@id/hotel2"
            android:text="+informacion" />


        <ImageView
            android:id="@+id/hotel2"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="400dp"
            android:src="@drawable/hotel2"
            android:scaleType="centerCrop"/>

        <TextView
            android:id="@+id/hotel2Info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre:Rambagh Palace\nLugar:Jaipur, India\nValoración: ★★★★★\nPrecio: $23,000"
            android:layout_toEndOf="@id/hotel1"
            android:layout_marginStart="30dp"
            android:layout_marginTop="400dp"/>

        <Button
            android:id="@+id/hotel2Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="60dp"
            android:layout_marginTop="480dp"
            android:layout_toEndOf="@id/hotel2"
            android:text="+informacion" />

        <ImageView
            android:id="@+id/hotel3"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="550dp"
            android:src="@drawable/hotel3"
            android:scaleType="centerCrop"/>

        <TextView
            android:id="@+id/hotel3Info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre:Ozen Reserve\nLugar:Isla Bolifushi\nValoración: ★★★★★\nPrecio: $17,500"
            android:layout_toEndOf="@id/hotel1"
            android:layout_marginStart="30dp"
            android:layout_marginTop="550dp"/>

        <Button
            android:id="@+id/hotel3Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="60dp"
            android:layout_marginTop="630dp"
            android:layout_toEndOf="@id/hotel3"
            android:text="+informacion" />

        <ImageView
            android:id="@+id/hotel4"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="700dp"
            android:src="@drawable/hotel4"
            android:scaleType="centerCrop"/>

        <TextView
            android:id="@+id/hotel4Info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre:Colline de France\nLugar:Gramado, Brasil\nValoración: ★★★★★\nPrecio: $20,000"
            android:layout_toEndOf="@id/hotel1"
            android:layout_marginStart="30dp"
            android:layout_marginTop="700dp"/>

        <Button
            android:id="@+id/hotel4Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="60dp"
            android:layout_marginTop="780dp"
            android:layout_toEndOf="@id/hotel4"
            android:text="+informacion" />

        <ImageView
            android:id="@+id/hotel5"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="850dp"
            android:src="@drawable/hotel5"
            android:scaleType="centerCrop"/>

        <TextView
            android:id="@+id/hotel5Info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre:The Ritz-Carlton\nLugar:Hong Kong, China\nValoración: ★★★★★\nPrecio: $22,000"
            android:layout_toEndOf="@id/hotel1"
            android:layout_marginStart="30dp"
            android:layout_marginTop="850dp"/>

        <Button
            android:id="@+id/hotel5Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="60dp"
            android:layout_marginTop="930dp"
            android:layout_toEndOf="@id/hotel5"
            android:text="+informacion" />

    </RelativeLayout>
</ScrollView>